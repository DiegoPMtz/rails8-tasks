<%= form_with(model: @task, local: true) do |f| %>
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, class: "input" %>
    </div>
    <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, class: "textarea" %>
    </div>
    <div class="field">
        <%= f.submit "Save", class: "button is-primary" %>
    </div>
<%end%>